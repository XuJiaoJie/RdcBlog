<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1dp" android:color="#d1cccc"></stroke>
            <solid android:color="#aab6b3b3"></solid>
            <corners android:radius="15dp"></corners>
            <padding android:bottom="4dp" android:left="6dp" android:right="6dp" android:top="4dp"></padding>
        </shape>
    </item>

    <item>
        <shape>
            <stroke android:width="1dp" android:color="#d1cccc"></stroke>
            <solid android:color="#e9e9e9"></solid>
            <corners android:radius="15dp"></corners>
            <padding android:bottom="4dp" android:left="6dp" android:right="6dp" android:top="4dp"></padding>
        </shape>
    </item>

</selector>