<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/bloglist_blog_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="其实你距离PHP高几个i融机构i偶尔就宫颈癌的风格id哦给"
            android:lines="2"
            android:textSize="16sp"
            android:textColor="#2d2c2c"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/bloglist_single_item_icon"
            android:layout_marginLeft="8dp"/>

        <ImageView
            android:id="@+id/bloglist_single_item_icon"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:src="@drawable/photo_empty_photo"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="28dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/bloglist_collect_user_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            fresco:roundAsCircle="true"
            fresco:roundedCornerRadius="180dp"
            fresco:actualImageScaleType="focusCrop"
            fresco:failureImage="@drawable/bloglist_img_user"
            fresco:failureImageScaleType="centerInside"/>


        <TextView
            android:id="@+id/bloglist_blog_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="分享于 昨天15:03"
            android:layout_marginLeft="10dp"
            android:textSize="10sp"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/bloglist_collect_user_icon"/>

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:src="@drawable/blogdetail_im_good"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@+id/bloglist_good"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/bloglist_good"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="10sp"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/bloglist_comment_icon"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:id="@+id/bloglist_comment_icon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:src="@drawable/bloglist_comment"
            android:layout_toLeftOf="@+id/bloglist_comment_sum"
            android:background="#00000000"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/bloglist_comment_sum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="0"
            android:textSize="10sp"/>
    </RelativeLayout>
</LinearLayout>