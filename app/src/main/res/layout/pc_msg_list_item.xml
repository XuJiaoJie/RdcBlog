<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.android.rdc.rdcblog.personalcenter.util.CircleImageView
        android:id="@+id/pc_msg_sender_icon"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/pc_iv_head_icon"/>
    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/msg_sender_nickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="虫子"/>
            <TextView
                android:id="@+id/pc_msg_send_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="7-26" />
        </LinearLayout>

        <TextView
            android:id="@+id/pc_msg_content"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:text="太及时啦，正苦恼找不到资源，大谢。关注这个版块真的一点也不亏。"/>

    </LinearLayout>

</LinearLayout>
