
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/pc_tv_collect_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="其实你距离PHP高几个i融机构i偶尔就宫颈癌的风格id哦给"
            android:lines="2"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_toStartOf="@+id/pc_iv_collect_picture"
            android:layout_marginLeft="8dp"/>

        <ImageView
            android:id="@+id/pc_iv_collect_picture"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/bloglist_img_user"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="28dp">

        <com.android.rdc.rdcblog.bloglist.view.defined.RoundImageView
            android:id="@+id/pc_iv_collect_user_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/bloglist_img_user"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/pc_tv_collect_blog_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="分享于 昨天15:03"
            android:layout_toRightOf="@id/pc_iv_collect_user_icon"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/title_text_n"
            android:textColor="@color/black"
            android:gravity="center_vertical"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/blogdetail_im_good"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@+id/pc_collect_favor_num"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/pc_collect_favor_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="10sp"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/bloglist_comment_icon"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:id="@+id/bloglist_comment_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/bloglist_comment"
            android:layout_toLeftOf="@+id/pc_tv_commment_num"
            android:background="#ffffff"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/pc_tv_commment_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="0"
            android:textSize="10sp"/>
    </RelativeLayout>
</LinearLayout>